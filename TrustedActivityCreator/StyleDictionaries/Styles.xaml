<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:v="clr-namespace:TrustedActivityCreator.View"
					xmlns:vm="clr-namespace:TrustedActivityCreator.ViewModel"
					xmlns:m="clr-namespace:TrustedActivityCreator.Model">

	<Style x:Key="BigFont">
		<Style.Setters>
			<Setter Property="Control.FontSize" Value="18" />
		</Style.Setters>
	</Style>

	<Style x:Key="AnchorStyle" TargetType="Ellipse">
		<Style.Setters>
			<Setter Property="Opacity" Value="0"/>
		</Style.Setters>
	</Style>

	<Style x:Key="Std">
		<Style.Setters>
			<Setter Property="Control.Background" Value="#343638"/>
			<Setter Property="Control.Foreground" Value="White"/>
		</Style.Setters>
	</Style>

	<Style x:Key="EvenRow" TargetType="TextBox">
		<Style.Setters>
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="FontSize" Value="12"/>
		</Style.Setters>
	</Style>

	<Style x:Key="UnevenRow" TargetType="TextBox">
		<Style.Setters>
			<Setter Property="Background" Value="WhiteSmoke"/>
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="FontSize" Value="12"/>
		</Style.Setters>
	</Style>

</ResourceDictionary>
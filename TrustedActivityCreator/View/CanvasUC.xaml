<UserControl x:Class="TrustedActivityCreator.View.CanvasUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrustedActivityCreator.View"
             xmlns:m="clr-namespace:TrustedActivityCreator.Model"
			 xmlns:vm="clr-namespace:TrustedActivityCreator.ViewModel"
             xmlns:gui="clr-namespace:TrustedActivityCreator.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

	<Grid Width="{Binding ActualWidth}" Height="{Binding ActualHeight}">
		<gui:TrustedCanvas x:Name="TrustedCanvas" Background="White" ClipToBounds="False">
			<ItemsControl Panel.ZIndex="1000" ItemsSource="{Binding Shapes}" />
			<ItemsControl Panel.ZIndex="500" ItemsSource="{Binding Connections}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<Grid/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>
		</gui:TrustedCanvas>
		<CheckBox Opacity="0.3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-20,0,0" IsChecked="{Binding SnapToGrid}">
			<TextBlock Text="Snap To Grid"></TextBlock>
		</CheckBox>
    </Grid>
</UserControl>

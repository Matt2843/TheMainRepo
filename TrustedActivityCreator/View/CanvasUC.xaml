<UserControl x:Class="TrustedActivityCreator.View.CanvasUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrustedActivityCreator.View"
             xmlns:m="clr-namespace:TrustedActivityCreator.Model"
			 xmlns:vm="clr-namespace:TrustedActivityCreator.ViewModel"
             xmlns:gui="clr-namespace:TrustedActivityCreator.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

	<Grid Width="{Binding Width}" Height="{Binding Height}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<gui:TrustedCanvas x:Name="TrustedCanvas" Grid.Row="0" Grid.Column="0" Background="White" ClipToBounds="True">
			<ItemsControl Panel.ZIndex="1000" ItemsSource="{Binding Shapes}" />
			<ItemsControl Panel.ZIndex="500" ItemsSource="{Binding Connections}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<Grid/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>
		</gui:TrustedCanvas>
    </Grid>
</UserControl>

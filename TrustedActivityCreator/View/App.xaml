<Application x:Class="TrustedActivityCreator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:v="clr-namespace:TrustedActivityCreator.View"
			 xmlns:m="clr-namespace:TrustedActivityCreator.Model"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type m:ActivityM}">
            <Canvas>
                <v:ActivityUC/>
            </Canvas>
        </DataTemplate>

        <DataTemplate DataType="{x:Type m:CanvasM}">
            <Canvas>
                <v:CanvasUC/>
            </Canvas>
        </DataTemplate>
    </Application.Resources>
</Application>

<UserControl x:Class="TrustedActivityCreator.View.TrustedCondition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrustedActivityCreator.View"
             mc:Ignorable="d" 
			 Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}" Width="{Binding Width}" Height="{Binding Height}"
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Rectangle Name="Condition" Stroke="Black" StrokeThickness="1" RenderTransformOrigin="0.5,0.5" Fill="White">
			<Rectangle.RenderTransform>
				<RotateTransform Angle="45"/>
			</Rectangle.RenderTransform>
		</Rectangle>
		<TextBox HorizontalAlignment="Stretch" Margin="0,100,0,100" />
	</Grid>
</UserControl>

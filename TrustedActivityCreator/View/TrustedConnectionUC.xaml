<UserControl x:Class="TrustedActivityCreator.View.TrustedConnectionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrustedActivityCreator.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Line Stroke="Red" X1="{Binding From.X}" Y1="{Binding From.Height}" X2="{Binding To.X}" Y2="{Binding To.Height}" StrokeThickness="10"/>
</UserControl>

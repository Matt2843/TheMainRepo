<UserControl DataContext="{x:Type m:Activity}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:m="clr-namespace:TrustedActivityCreator.Model"
             mc:Ignorable="d" 
             Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}" Width="{Binding Width}" Height="{Binding Height}"
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid>
        <Rectangle RadiusX="7" RadiusY="7" Fill="White" Stroke="Black" />
        <TextBox Text="{Binding Path=ActivityDescription}" Margin="5" />
    </Grid>
</UserControl>
